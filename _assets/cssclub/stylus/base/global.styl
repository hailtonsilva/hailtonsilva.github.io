body
  font-family family-sans
  font-size 1em

a
  text-decoration none
  color black

img
  max-width 100%

p 
  margin-bottom 1rem
  margin-top: .6rem
  line-height 1.6rem

ul
  list-style-type: disc;
  margin-left: 2rem;
.list-unstyled
  list-style: none;
  margin-left: 0;

li
  line-height 1.6rem

strong, b
  font-weight bold

small 
  font-size .8rem

em
  font-style: italic
  font-size: .9rem

hr
  background-color #e0e0e0
  border none
  display block
  height .07rem
  margin 1.4rem 0

pre code,
code
  background #eee
  color #d14
  padding 0 0.3rem
  font-family "Inconsolata", "Consolas", "Monaco", monospace