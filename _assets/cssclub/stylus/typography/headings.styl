
// Title and Headings (h1..h6)
for value, key in size-h1 size-h2 size-h3 size-h4 size-h5 size-h6
  h{key+1}
    font-size value
    +to-width(tablet-size)
      font-size (value/1.2)
    font-weight lighter
    margin-bottom 1rem

// default .title 
.title
  @extends h3
// title sizes variations (.size-1, .size-2,...)
for value in 1 2 3 4 5 6
  &.size-{value}
    @extends h{value}

h1, h2, h3, .title
  padding 0
  padding-top 1rem


h2[id] {
  display: block;
  padding-top: 49px;
  margin-top: -19px;
}