---
layout: nil
published: true
---

[
{% for post in site.posts %}
    {
      "title"    : "{{ post.title }}",
      "id"     : "{{ post.url }}",
      "url"     : "{{ post.url }}",
      "date"     : "{{ post.date | date: '%B %d, %Y' }}",
      "image"     : "{{ post.image }}",
      "cover-image"     : "{{ post.cover-image }}",
      "content"  : "{{ post.content | markdownify | normalize_whitespace }}"
    } {% if forloop.last %}{% else %},{% endif %}
{% endfor %}
]
